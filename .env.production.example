# Production Environment Variables for Hostinger
# Copy this file to .env.production and update with your values

# Backend API Configuration
NEXT_PUBLIC_BACKEND_URL=https://api.evo-techbd.com/api/v1
NEXT_PUBLIC_API_URL=https://api.evo-techbd.com/api/v1
NEXT_PUBLIC_FEND_URL=https://yourdomain.com

# NextAuth Configuration
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING
AUTH_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING
NEXTAUTH_URL=https://yourdomain.com

# App Configuration
NODE_ENV=production
PORT=3000

# Build Configuration
BUILD_STANDALONE=true
